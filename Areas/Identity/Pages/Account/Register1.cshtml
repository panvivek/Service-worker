@page
@model RegisterModel
@{
    ViewData["Title"] = "Worker Register";
}

<link rel="stylesheet" href="~/css/auth-styles.css" />
<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <img src="~/img/Logo.png" alt="QuickFix Logo" class="brand-logo">
            <h1 class="auth-title">Create Worker Account</h1>
            <p class="auth-subtitle">Join our platform as a service provider</p>
            
            <form id="registerForm" asp-route-returnUrl="/Workers/Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                
                <div class="form-group">
                    <label asp-for="Input.Firstname" class="form-label">First Name</label>
                    <input asp-for="Input.Firstname" class="form-control" placeholder="Enter your first name" />
                    <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.Lastname" class="form-label">Last Name</label>
                    <input asp-for="Input.Lastname" class="form-control" placeholder="Enter your last name" />
                    <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Create a password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <input type="hidden" name="Input.Role" value="Worker" />
                
                <button type="submit" class="btn-auth">Create Worker Account</button>
                
                <div class="auth-divider">
                    <span>or</span>
                </div>
                
                <div class="text-center">
                    <p class="mb-3">Looking to hire?</p>
                    <a asp-page="./Register" class="auth-link">Register as Customer</a>
                </div>
                
                <div class="text-center mt-4">
                    <span>Already have an account? </span>
                    <a asp-page="./Login" class="auth-link">Sign In</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}