@model WorkerDetailsViewModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css">

<style>
    body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 50%, #D946EF 100%);
        color: #374151;
    }

    .page-container {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        margin: 2rem auto;
        padding: 2rem;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        max-width: 1200px;
    }

    .profile-section {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .profile-image {
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .profile-image:hover {
            transform: scale(1.02);
        }

    .rating-badge {
        background: #8B5CF6;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        display: inline-block;
    }

    .review-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;
    }

        .review-card:hover {
            transform: translateY(-5px);
        }

    .pagination {
        justify-content: center;
        margin: 2rem 0;
    }

    .page-link {
        color: #8B5CF6;
        padding: 0.75rem 1.25rem;
        border-radius: 8px;
        margin: 0 0.25rem;
    }

        .page-link:hover {
            background-color: #8B5CF6;
            color: white;
        }

    .btn-back {
        background-color: #6366F1;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
        margin-top: 1rem;
    }

        .btn-back:hover {
            background-color: #4F46E5;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
        }
</style>

<div class="container page-container animate__animated animate__fadeIn">
    <div class="profile-section">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@Model.ProfilePicUrl" alt="Profile Image" class="img-fluid profile-image mb-3" style="max-width: 300px;" />
            </div>
            <div class="col-md-8">
                <h2 class="mb-4">@Model.FirstName @Model.LastName</h2>
                <div class="d-flex flex-wrap gap-4 mb-4">
                    <div>
                        <i class="ri-money-dollar-circle-line"></i>
                        <strong>Price:</strong> $@Model.Price/hr
                    </div>
                    <div class="rating-badge">
                        <i class="ri-star-fill"></i>
                        @ViewBag.AverageRating.ToString("0.0") / 5
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="reviews-section">
        <h3 class="mb-4"><i class="ri-chat-3-line"></i> Reviews</h3>
        @if (Model.Reviewss != null && Model.Reviewss.Count > 0)
        {
            foreach (var review in Model.Reviewss)
            {
                <div class="review-card animate__animated animate__fadeIn">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5>@(string.IsNullOrEmpty(review.CustomerName) ? "Anonymous" : review.CustomerName)</h5>
                            <div class="text-warning mb-2">
                                @for (int i = 0; i < review.RatingValue; i++)
                                {
                                    <i class="ri-star-fill"></i>
                                }
                            </div>
                        </div>
                        <small class="text-muted">
                            <i class="ri-time-line"></i> @review.ReviewDate.ToString("MMMM dd, yyyy")
                        </small>
                    </div>
                    <p class="mb-0">@review.Comment</p>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info">
                <i class="ri-information-line"></i> No reviews available for this worker.
            </div>
        }
    </div>

    <nav aria-label="Review navigation">
        <ul class="pagination">
            <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Details" asp-route-workerId="@Model.Worker_Id" asp-route-serviceId="@ViewBag.ServiceId" asp-route-page="@(ViewBag.CurrentPage - 1)">
                    <i class="ri-arrow-left-line"></i> Previous
                </a>
            </li>
            <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Details" asp-route-workerId="@Model.Worker_Id" asp-route-serviceId="@ViewBag.ServiceId" asp-route-page="@(ViewBag.CurrentPage + 1)">
                    Next <i class="ri-arrow-right-line"></i>
                </a>
            </li>
        </ul>
    </nav>

    <div class="text-center">
        <a asp-controller="Workers" asp-action="Index" asp-route-serviceId="@ViewBag.ServiceId" class="btn-back">
            <i class="ri-arrow-left-line"></i> Back to List
        </a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"> </script>
<script>

    document.querySelectorAll('.dropdown-toggle').forEach(function (dropdown) {
        dropdown.addEventListener('click', function (event) {
            event.preventDefault();
            event.stopPropagation();
            this.classList.toggle('show');
            this.nextElementSibling.classList.toggle('show');
        });
    });

</script>