<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuickFix</title>

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Modern UI Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css">

    <!-- Custom Styles -->
    <style>
        /* Smooth Transitions */
        * {
            transition: all 0.3s ease-in-out;
        }

        html {
            font-size: 18px; /* Default is usually 16px, adjust as needed */
        }

        body {
            font-family: 'Arial', 'Helvetica', sans-serif;
            line-height: 1.5;

        }
        /* Navbar Styling */
        #header-navbar {
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.95) !important;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #6200EA !important;
        }

        .nav-link {
            font-weight: 500;
            position: relative;
            padding: 0.5rem 1rem;
            margin: 0 0.2rem;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                width: 0;
                height: 2px;
                background: #6200EA;
                transition: all 0.3s ease;
                transform: translateX(-50%);
            }

            .nav-link:hover::after {
                width: 80%;
            }

        /* Container Styling */
        .container {
            padding: 2rem 1rem;

        }

        /* Sticky Footer Styling */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        .footer {
            background: linear-gradient(45deg, #6200EA, #B388FF) !important;
            color: white !important;
            padding: 1.5rem 0;
            position: absolute;
            bottom: 0;
            width: 100%;
          
        }

            .footer a {
                color: white !important;
                opacity: 0.8;
                transition: all 0.3s ease;
            }

                .footer a:hover {
                    opacity: 1;
                    transform: translateY(-3px);
                }

        .social-icons {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
        }

            .social-icons a {
                width: 40px;
                height: 40px;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.1);
            }

                .social-icons a:hover {
                    background: rgba(255, 255, 255, 0.2);
                }

        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        .slide-up {
            animation: slideInUp 0.5s ease-out;
        }

        .wave-separator {
            margin-bottom: -10px; /* Adjusts overlap to blend with the footer */
            overflow: hidden;
        }

            .wave-separator svg {
                display: block;
                width: 100%;
                height: auto;
            }

    </style>
</head>
<body>
    <!-- Navbar -->
    <header class="fade-in">
        <nav id="header-navbar" class="navbar navbar-expand-sm navbar-light fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-bolt brand-icon"></i> QuickFix
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home nav-icon"></i> Home
                            </a>
                        </li>
                        @if (!User.IsInRole("Worker"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Services" asp-action="Index">
                                    <i class="fas fa-briefcase nav-icon"></i> Services
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Account Dropdown -->
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="slide-up">
        <div class="container mt-5 pt-4">
            @RenderBody()
        </div>
    </main>
    
    <div class="wave-separator">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="#5b23a1" fill-opacity="1" d="M0,96L1440,224L1440,320L0,320Z"></path>
        </svg>
    </div>
    <!-- Footer -->
    <footer class="footer mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4 text-center">
                    <p class="mb-0"><i class="fas fa-copyright"></i> 2024 QuickFix</p>
                </div>
                <div class="col-lg-4 text-center">
                    <h6>Connect With Us</h6>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <p class="mb-0">Made with <i class="fas fa-heart text-danger"></i> by QuickFix Team</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <script>
        new WOW().init();

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({ behavior: 'smooth' });
            });
        });
        document.querySelectorAll('.dropdown-toggle').forEach(function (dropdown) {
            dropdown.addEventListener('click', function (event) {
                event.preventDefault();
                event.stopPropagation();
                this.classList.toggle('show');
                this.nextElementSibling.classList.toggle('show');
            });
        });
        window.addEventListener('scroll', function () {
            const navbar = document.getElementById('header-navbar');
            if (window.scrollY > 50) {
                navbar.style.padding = '0.5rem 1rem';
            } else {
                navbar.style.padding = '1rem';
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
