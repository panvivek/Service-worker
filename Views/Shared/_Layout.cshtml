<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuickFix</title>

    <!-- Base Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ServiceWorkerWebsite.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Custom Styles Section -->
    @await RenderSectionAsync("Styles", required: false)

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        #header-navbar {
            background: rgba(255, 255, 255, 0.9) !important;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .navbar-brand {
            font-weight: 700;
            background: linear-gradient(135deg, #8B5CF6, #EC4899);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 1.5rem;
        }

        .nav-link {
            font-weight: 500;
            transition: all 0.2s ease;
        }

            .nav-link:hover {
                color: #8B5CF6 !important;
            }

        .footer {
            background: linear-gradient(135deg, #8B5CF6, #EC4899) !important;
            color: white !important;
            padding: 2rem 0;
        }

            .footer p {
                color: rgba(255, 255, 255, 0.9) !important;
                font-weight: 500;
            }

            .footer .nav-link {
                color: rgba(255, 255, 255, 0.9) !important;
                margin: 0 0.5rem;
                transition: all 0.2s ease;
            }

                .footer .nav-link:hover {
                    color: white !important;
                    transform: translateY(-2px);
                }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        main {
            min-height: calc(100vh - 160px);
        }
    </style>
</head>
<body>
    <header>
        <nav id="header-navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">QuickFix</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("Worker"))
                        {
                            <li class="nav-item">
                                <a></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 76px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4 col-md-12 d-flex align-items-center">
                </div>
                <div class="col-lg-4 col-md-12 d-flex align-items-center">
                    <p class="mx-auto text-center mb-0">&copy; 2024 QuickFix</p>
                </div>
                <div class="col-lg-4 col-md-12">
                    <nav class="nav nav-mastfoot justify-content-center">
                        <a class="nav-link" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="nav-link" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="nav-link" href="#"><i class="fab fa-instagram"></i></a>
                        <a class="nav-link" href="#"><i class="fab fa-linkedin"></i></a>
                        <a class="nav-link" href="#"><i class="fab fa-youtube"></i></a>
                    </nav>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Add shadow to navbar on scroll
        window.addEventListener('scroll', function () {
            const navbar = document.getElementById('header-navbar');
            if (window.scrollY > 10) {
                navbar.style.boxShadow = '0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)';
            } else {
                navbar.style.boxShadow = 'none';
            }
        });
    </script>
</body>
</html>