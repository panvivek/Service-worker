@model Booking

@if (Model != null)
{
    <div class="p-6">
        <!-- Customer Information -->
        <div class="mb-6">
            <div class="flex items-center mb-4">
                <i class="ri-user-line text-lg text-purple-600 mr-2"></i>
                <h3 class="text-lg font-semibold">Customer Information</h3>
            </div>
            <div class="bg-gray-50 rounded-lg p-4">
                <div class="grid grid-cols-2 gap-4">
                    <div class="text-gray-600">Name</div>
                    <div class="font-medium">@Model.User.Firstname @Model.User.Lastname</div>

                    <div class="text-gray-600">Email</div>
                    <div class="font-medium">@Model.User.Email</div>

                    <div class="text-gray-600">Phone</div>
                    <div class="font-medium">@Model.User.PhoneNumber</div>
                </div>
            </div>
        </div>

        <!-- Booking Information -->
        <div class="mb-6">
            <div class="flex items-center mb-4">
                <i class="ri-calendar-check-line text-lg text-purple-600 mr-2"></i>
                <h3 class="text-lg font-semibold">Booking Details</h3>
            </div>
            <div class="bg-gray-50 rounded-lg p-4">
                <div class="grid grid-cols-2 gap-4">
                    <div class="text-gray-600">Service</div>
                    <div class="font-medium">@Model.Service.Name</div>

                    <div class="text-gray-600">Date</div>
                    <div class="font-medium">@Model.TimeSlot.SelectedDates</div>

                    <div class="text-gray-600">Time</div>
                    <div class="font-medium">@Model.TimeSlot.TimeSlots</div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-end gap-3">
            <button onclick="closeModal()" class="px-4 py-2 text-gray-600 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                <i class="ri-close-line mr-1"></i>
                Close
            </button>

            <a href="@Url.Action("DownloadInvoice", "Bookings", new { id = Model.Id })"
               class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors inline-flex items-center">
                <i class="ri-download-line mr-1"></i>
                Download Invoice
            </a>
        </div>
    </div>
}
else
{
    <div class="p-8 text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 mb-4 rounded-full bg-gray-100">
            <i class="ri-information-line text-2xl text-gray-400"></i>
        </div>
        <p class="text-gray-500">No booking information available for this time slot.</p>
    </div>
}

