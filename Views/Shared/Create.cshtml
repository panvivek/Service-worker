@model Reviews




<h2>Create a New Review</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Worker_Id" class="control-label"></label>
        <input asp-for="Worker_Id" class="form-control" />
        <span asp-validation-for="Worker_Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RatingValue" class="control-label"></label>
        <input asp-for="RatingValue" class="form-control" />
        <span asp-validation-for="RatingValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
