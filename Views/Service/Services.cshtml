@model IEnumerable<Service>

@{
    ViewData["Title"] = "Services";
}

<!-- Include Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<!-- Custom CSS -->
<link rel="stylesheet" href="~/css/Services.css">

<div class="container">
    <h1 class="text-center mb-4">Our Services</h1>

    <div class="row">
        @foreach (var service in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm">
                    <!-- Image -->
                    <img src="@service.ImageUrl" class="card-img-top img-fluid rounded-circle mx-auto d-block mt-4" alt="@service.Name">

                    <div class="card-body text-center">
                        <!-- Service Details -->
                        <h5 class="card-title">@service.Name</h5>
                        <p class="card-text">@service.Description</p>
                        <!-- View Workers Button -->
                        <a href="@Url.Action("Details", "Service", new { id = service.Id })" class="btn btn-primary btn-sm">View Workers</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Include Bootstrap JS (Optional) -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
