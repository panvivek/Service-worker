@model IEnumerable<TimeSlot>

@{
    ViewData["Title"] = "Index";
}

<!--If the menu dropdown doesn't work copy paste the lines below this to the html pages that doesnt work with dropdown-->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.IsBooked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.IsBooked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Worker.Worker_Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TimeSlotId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TimeSlotId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TimeSlotId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
