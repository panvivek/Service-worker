@model WorkerEarningsViewModel

@{
    ViewData["Title"] = "Worker Earnings Dashboard";
}

<div class="space-y-8">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Earnings Overview for Worker #@Model.WorkerId</h2>
        </div>
        <div class="card-content">
            <div class="space-y-4">
                <div class="grid grid-cols-3 gap-4">
                    <div class="bg-blue-50 p-4 rounded-lg">
                        <h3 class="text-lg font-semibold">Total Earnings</h3>
                        <p class="text-2xl font-bold">$@Model.TotalEarnings</p>
                    </div>
                    <div class="bg-green-50 p-4 rounded-lg">
                        <h3 class="text-lg font-semibold">Total Bookings</h3>
                        <p class="text-2xl font-bold">@Model.TotalBookings</p>
                    </div>
                    <div class="bg-purple-50 p-4 rounded-lg">
                        <h3 class="text-lg font-semibold">Services Offered</h3>
                        <p class="text-2xl font-bold">@Model.ServicesCount</p>
                    </div>
                </div>

                <div class="mt-8">
                    <h3 class="text-lg font-semibold mb-4">Earnings by Service</h3>
                    <div class="h-64">
                        <canvas id="earningsBarChart"></canvas>
                    </div>
                </div>

                <div class="mt-8">
                    <h3 class="text-lg font-semibold mb-4">Service Details</h3>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="bg-gray-100">
                                    <th class="p-2 text-left">Service</th>
                                    <th class="p-2 text-left">Base Price</th>
                                    <th class="p-2 text-left">Bookings</th>
                                    <th class="p-2 text-left">Total Earnings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model.ServiceEarnings)
                                {
                                    <tr class="border-b">
                                        <td class="p-2">@service.ServiceName</td>
                                        <td class="p-2">$@service.BasePrice</td>
                                        <td class="p-2">@service.TotalBookings</td>
                                        <td class="p-2">$@service.TotalEarnings</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const earningsBarChartCtx = document.getElementById('earningsBarChart').getContext('2d');
        const earningsBarChart = new Chart(earningsBarChartCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.ServiceEarnings.Select(e => e.ServiceName))),
                datasets: [
                    {
                        label: 'Total Earnings',
                        data: @Html.Raw(Json.Serialize(Model.ServiceEarnings.Select(e => e.TotalEarnings))),
                        backgroundColor: '#8884d8'
                    },
                    {
                        label: 'Total Bookings',
                        data: @Html.Raw(Json.Serialize(Model.ServiceEarnings.Select(e => e.TotalBookings))),
                        backgroundColor: '#82ca9d'
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        enabled: true,
                    }
                }
            }
        });
    </script>
}
