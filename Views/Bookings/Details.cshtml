@model ServiceWorkerWebsite.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title mb-0">Booking Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="mb-3">Customer Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.User.Firstname @Model.User.Lastname</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.User.Email</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.User.PhoneNumber</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h4 class="mb-3">Booking Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Service:</dt>
                        <dd class="col-sm-8">@Model.Service.Name</dd>

                        <dt class="col-sm-4">Date:</dt>
                        <dd class="col-sm-8">@Model.TimeSlot.SelectedDates</dd>

                        <dt class="col-sm-4">Time:</dt>
                        <dd class="col-sm-8">@Model.TimeSlot.TimeSlots</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="btn-group">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <a asp-action="DownloadInvoice" asp-route-id="@Model.Id" class="btn btn-info">Download Invoice</a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .card-header {
        border-bottom: 0;
    }

    dt {
        font-weight: 600;
    }

    dd {
        margin-bottom: 0.5rem;
    }
</style>