@model Booking

<div class="booking-details-modal">
    <div class="booking-details-content">
        <h2>Booking Details</h2>
        <p><strong>Customer:</strong> @Model.Worker.User.Firstname @Model.Worker.User.Lastname</p>
        <p><strong>Contact:</strong> @Model.Worker.User.PhoneNumber</p>
        <p><strong>Service:</strong> @Model.Service.Name</p>
        <p><strong>Booking Date:</strong> @Model.BookingDate.ToString("yyyy-MM-dd")</p>
        <p><strong>Time Slot:</strong> @Model.TimeSlot.TimeSlots</p>
        <button class="close-btn" onclick="closeBookingDetails()">Close</button>
    </div>
</div>

<style>
    .booking-details-modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.4);
    }

    .booking-details-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 30%;
    }

    .close-btn {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close-btn:hover,
        .close-btn:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
</style>