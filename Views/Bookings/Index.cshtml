@model IEnumerable<ServiceWorkerWebsite.Models.Booking>

@{
    ViewData["Title"] = "Booking History";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<h1 class="text-center my-4">Booking History</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Booking</a>
</p>

<table class="table table-hover table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Worker Name</th>
            <th>Booking Date</th>
            <th>Time Slot</th>
            <th>Terms Agreed</th>
            <th>Service</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Worker != null && item.Worker.User != null)
                    {
                        <span>@item.Worker.User.Firstname @item.Worker.User.Lastname</span>
                    }
                    else
                    {
                        <span class="text-muted">No Worker Assigned</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingDate)
                </td>
                <td>
                    @if (item.TimeSlot != null)
                    {
                        @Html.DisplayFor(modelItem => item.TimeSlot.SelectedDates) <br />
                        @Html.DisplayFor(modelItem => item.TimeSlot.TimeSlots)
                    }
                    else
                    {
                        <span class="text-muted">No Time Slot</span>
                    }
                </td>
                <td>
                    @if (item.AgreeToTerms)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>
                <td>
                    @if (item.Service != null)
                    {
                        @Html.DisplayFor(modelItem => item.Service.Name)
                    }
                    else
                    {
                        <span class="text-muted">No Service Assigned</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-controller="Review" asp-action="Create"
                       asp-route-workerId="@item.Worker_Id"
                       asp-route-serviceId="@item.Service_Id"
                       asp-route-userId="@item.UserId"
                       class="btn btn-sm btn-primary mt-2">Write a Review</a>


                </td>
            </tr>
        }

        <!-- Add a button or link to create a review -->
<div>
    <a asp-controller="Review" asp-action="Create"  class="btn btn-primary">Write a Review</a>
</div>

    </tbody>
</table>
